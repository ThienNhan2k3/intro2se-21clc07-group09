<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Buyer.BuyerHomeActivity"
    android:background="@color/background_color">

    <TextView
        android:layout_width="208dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:text="WhatsFood"
        android:textColor="@color/red"
        android:gravity="center"
        android:textSize="40sp"
        android:textStyle="bold"
        android:id="@+id/order_list_logo"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/search_bar_buyer_home"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_below="@id/order_list_logo"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/seach_edit_text_buyer_home"
            android:layout_width="300dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter name"
            android:background="#fff"
            />

        <ImageButton
            android:id="@+id/search_image_button_buyer_home"
            android:layout_height="44dp"
            android:layout_width="44dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="#00FFFFFF"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/seach_edit_text_buyer_home"
            android:contentDescription="back button"
            android:scaleType="fitXY"
            android:src="@drawable/ic_search"
            android:tint="#FFFFFF"
            tools:ignore="UseAppTint" />
    </RelativeLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_bar_buyer_home"
        android:layout_marginTop="20dp"
        android:id="@+id/food_list_view_buyer_home"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="25dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="20sp"
        android:scrollbars="none"/>


</RelativeLayout>