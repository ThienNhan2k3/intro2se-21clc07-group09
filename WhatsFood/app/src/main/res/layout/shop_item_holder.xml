<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_image_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars"
        android:contentDescription="Item image" />

    <TextView
        android:id="@+id/item_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        android:text="An item name"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_image_view"
        app:layout_constraintEnd_toStartOf="@+id/price_text_view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/item_image_view"
        app:layout_constraintTop_toTopOf="@+id/item_image_view"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="80sp"
        android:layout_height="match_parent"
        android:text="price"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/minus_button"
        android:backgroundTint="@color/theme_red"
        android:scaleType="fitCenter"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/item_text_view"
        app:layout_constraintStart_toEndOf="@+id/item_image_view"
        app:srcCompat="@drawable/minus_button"
        android:contentDescription="Remove an item" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plus_button"
        android:backgroundTint="@color/theme_red"
        android:scaleType="fitCenter"
        android:scaleX="0.5"
        android:scaleY="0.5"
        app:layout_constraintBottom_toBottomOf="@+id/item_text_view"
        app:layout_constraintEnd_toEndOf="@+id/item_text_view"
        app:srcCompat="@drawable/plus_button"
        android:contentDescription="Add an item" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButton3"
        app:layout_constraintStart_toEndOf="@+id/imageButton2"
        app:layout_constraintTop_toTopOf="@+id/imageButton2" />

</androidx.constraintlayout.widget.ConstraintLayout>