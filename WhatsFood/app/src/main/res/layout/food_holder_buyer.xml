<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="120dp"
    android:background="@drawable/bc_round_16dp"
    android:clickable="true"
    android:padding="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:id="@+id/img_card_view_holder_buyer">

        <ImageView
            android:id="@+id/img_view_food_holder_buyer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:background="@drawable/color_white_shape"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/food_name_food_holder_buyer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"

        android:text="Food Name"
        android:textAppearance="@style/bold_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_card_view_holder_buyer"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/store_food_holder_buyer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="15dp"

        android:text="Store"
        android:textAppearance="@style/text_24_normal"
        android:textColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/img_card_view_holder_buyer"
        app:layout_constraintTop_toBottomOf="@+id/food_name_food_holder_buyer" />

    <TextView
        android:id="@+id/price_food_holder_buyer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="end"
        android:text="20,000 VND"
        android:textAppearance="@style/text_24_normal"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/img_card_view_holder_buyer" />
</androidx.constraintlayout.widget.ConstraintLayout>