<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WhatsFood" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="bold_text">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="big_header">
        <item name="android:textSize">44sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_20_normal">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="text_24_normal">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/theme_white</item>
    </style>

    <style name="button_red" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:textAppearance">@style/bold_text</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_green" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/green</item>
        <item name="android:textAppearance">@style/bold_text</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="button_white" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAppearance">@style/bold_text</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>